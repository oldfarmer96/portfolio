---
import { experience } from '../data/experience';
---

<section id="experience" class="py-24 scroll-mt-20">
  <div class="container mx-auto px-6 max-w-4xl">
    <h2 class="text-3xl md:text-4xl font-bold mb-16 flex items-center gap-4 reveal">
      <span class="text-indigo-500">02.</span> Experiencia Laboral
    </h2>

    <div class="relative border-l-2 border-indigo-500/30 ml-4 md:ml-6 space-y-12">
      {experience.map((item, index) => (
        <div class="relative pl-8 md:pl-12 reveal-left" style={`transition-delay: ${index * 0.2}s`}>
          <!-- Dot -->
          <div class="absolute -left-[9px] top-1 w-4 h-4 rounded-full bg-indigo-500 shadow-[0_0_10px_rgba(99,102,241,0.5)]"></div>
          
          <div class="flex flex-col md:flex-row md:items-center justify-between mb-2">
            <h3 class="text-xl font-bold text-slate-800 dark:text-slate-200">
              {item.role}
            </h3>
            <span class="text-sm font-semibold text-indigo-500 bg-indigo-500/10 px-3 py-1 rounded-full w-fit mt-2 md:mt-0">
              {item.dates}
            </span>
          </div>
          
          <div class="text-lg font-medium text-slate-600 dark:text-slate-400 mb-4">
            {item.company}
          </div>
          
          <p class="text-slate-500 dark:text-slate-500 max-w-2xl leading-relaxed">
            {item.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
