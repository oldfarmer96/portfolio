---
const skillGroups = [
  {
    title: 'Backend',
    skills: ['NestJS', 'Node.js', 'PostgreSQL', 'TypeScript', 'Go', 'Express']
  },
  {
    title: 'Frontend',
    skills: ['React', 'Astro', 'Tailwind CSS', 'Redux', 'Next.js']
  },
  {
    title: 'DevOps & Tools',
    skills: ['Docker', 'Git', 'Linux', 'AWS', 'CI/CD']
  }
];
---

<section id="skills" class="py-24 scroll-mt-20">
  <div class="container mx-auto px-6 max-w-5xl">
    <h2 class="text-3xl md:text-4xl font-bold mb-16 flex items-center gap-4 reveal">
      <span class="text-indigo-500">04.</span> Habilidades TÃ©cnicas
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      {skillGroups.map((group, groupIndex) => (
        <div class="reveal-up" style={`transition-delay: ${groupIndex * 0.1}s`}>
          <h3 class="text-xl font-bold mb-8 text-slate-800 dark:text-slate-200 border-b border-indigo-500/20 pb-2">
            {group.title}
          </h3>
          <div class="grid grid-cols-2 gap-4">
            {group.skills.map(skill => (
              <div class="flex items-center gap-2 p-3 rounded-xl bg-white dark:bg-[#111111] border border-slate-200 dark:border-slate-800 hover:border-indigo-500 dark:hover:border-indigo-500 hover:shadow-lg hover:shadow-indigo-500/5 transition-all group overflow-hidden relative">
                <div class="absolute inset-0 bg-indigo-500/5 translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
                <!-- Placeholder Icon -->
                <div class="w-2 h-2 rounded-full bg-indigo-500"></div>
                <span class="text-sm font-medium relative z-10">{skill}</span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
