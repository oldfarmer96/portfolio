---
import { personal } from "../data/personal";
import ThemeToggle from "./ThemeToggle.astro";

const navItems = [
  { name: "Sobre m√≠", href: "#about" },
  { name: "Experiencia", href: "#experience" },
  { name: "Proyectos", href: "#projects" },
  { name: "Habilidades", href: "#skills" },
  { name: "Contacto", href: "#contact" },
];

const firstName = personal.name.split(" ")[0];
---

<header
  id="main-header"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 border-b border-transparent"
>
  <div class="container mx-auto px-6 py-4 flex justify-between items-center">
    <a
      href="/"
      class="text-xl font-bold bg-gradient-to-r from-indigo-500 to-purple-500 bg-clip-text text-transparent"
    >
      {firstName}
    </a>

    <nav class="hidden md:flex items-center space-x-8">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="text-sm font-medium hover:text-indigo-500 transition-colors"
          >
            {item.name}
          </a>
        ))
      }
      <ThemeToggle />
    </nav>

    <button
      id="mobile-menu-btn"
      class="md:hidden p-2 text-slate-700 dark:text-slate-300"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-white dark:bg-[#0a0a0a] border-b border-slate-200 dark:border-slate-800 transition-all duration-300 overflow-hidden"
  >
    <div class="px-6 py-4 flex flex-col space-y-4">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="text-lg font-medium py-2 hover:text-indigo-500 transition-colors"
          >
            {item.name}
          </a>
        ))
      }
      <div class="flex justify-between items-center py-2">
        <span class="text-sm font-medium text-slate-700 dark:text-slate-300">Tema</span>
        <ThemeToggle />
      </div>
    </div>
  </div>
</header>

<script>
  function init() {
    const header = document.getElementById("main-header");
    const mobileMenuBtn = document.getElementById("mobile-menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");

    if (!header || header.dataset.initialized === "true") {
      return;
    }

    header.dataset.initialized = "true";

    // Scroll Effect
    const onScroll = () => {
      if (window.scrollY > 20) {
        header.classList.add(
          "bg-white/80",
          "dark:bg-[#0a0a0a]/80",
          "backdrop-blur-md",
          "border-slate-200",
          "dark:border-white/10",
        );
      } else {
        header.classList.remove(
          "bg-white/80",
          "dark:bg-[#0a0a0a]/80",
          "backdrop-blur-md",
          "border-slate-200",
          "dark:border-white/10",
        );
      }
    };

    onScroll();
    window.addEventListener("scroll", onScroll);

    // Mobile Menu Toggle
    mobileMenuBtn?.addEventListener("click", () => {
      mobileMenu?.classList.toggle("hidden");
    });

    // Close mobile menu on link click
    mobileMenu?.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", () => {
        mobileMenu.classList.add("hidden");
      });
    });
  }

  // Support for View Transitions
  document.addEventListener("astro:page-load", init);
</script>
